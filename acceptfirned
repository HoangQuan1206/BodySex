-- Auto Accept Friend Requests
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- HÃ m Ä‘á»ƒ cháº¥p nháº­n lá»i má»i káº¿t báº¡n
local function acceptFriendRequest(player)
    if not player or player == LocalPlayer then return end
    -- Gá»­i request Ä‘á»ƒ káº¿t báº¡n
    pcall(function()
        LocalPlayer:RequestFriendship(player)
        player:RequestFriendship(LocalPlayer)
    end)
end

-- Khi cÃ³ ngÆ°á»i má»›i join, auto káº¿t báº¡n
Players.PlayerAdded:Connect(function(player)
    acceptFriendRequest(player)
end)

-- Vá»›i ngÆ°á»i Ä‘Ã£ á»Ÿ trong game, káº¿t báº¡n luÃ´n
for _, player in pairs(Players:GetPlayers()) do
    acceptFriendRequest(player)
end

-- ===============================
-- HUD GÃ³c Pháº£i NÃ¢ng Cáº¥p (VN Clock + Info + Optimize)
-- ===============================
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

-- Táº¡o ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "VN_Info_HUD"
screenGui.Parent = PlayerGui
screenGui.ResetOnSpawn = false

-- Khung ná»n
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 115) -- giáº£m chiá»u cao vÃ¬ bá» uptime
frame.Position = UDim2.new(1, -310, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.4
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Bo gÃ³c
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = frame

-- HÃ m táº¡o label
local function createLabel(yPos, text, size, color)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -10, 0, 20)
    label.Position = UDim2.new(0, 5, 0, yPos)
    label.BackgroundTransparency = 1
    label.TextColor3 = color
    label.TextStrokeTransparency = 0.5
    label.Font = Enum.Font.SourceSansBold
    label.TextSize = size
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Text = text
    label.Parent = frame
    return label
end

-- CÃ¡c label
local clockLabel = createLabel(5, "â° VN: --:--:--", 20, Color3.fromRGB(255, 255, 255))
local dateLabel = createLabel(30, "ðŸ“… --/--/----", 18, Color3.fromRGB(150, 200, 255))
local creditLabel = createLabel(50, "ðŸš€ Váº­n hÃ nh bá»Ÿi HoÃ ng QuÃ¢n (Mario)", 16, Color3.fromRGB(255, 215, 0))
local serverLabel = createLabel(75, "ðŸŽ® Sea: ??? | Players: --", 16, Color3.fromRGB(150, 255, 150))
local perfLabel = createLabel(95, "âš¡ FPS: -- | ðŸ“¡ Ping: --", 16, Color3.fromRGB(255, 170, 0))

-- HÃ m láº¥y Sea theo PlaceId
local function getSea()
    local placeId = game.PlaceId
    if placeId == 2753915549 then
        return "First"
    elseif placeId == 4442272183 then
        return "Second"
    elseif placeId == 7449423635 then
        return "Third"
    else
        return "Unknown"
    end
end

-- Update liÃªn tá»¥c
task.spawn(function()
    while task.wait(1) do
        local now = os.date("!*t")
        local vnHour = (now.hour + 7) % 24
        local h = string.format("%02d", vnHour)
        local m = string.format("%02d", now.min)
        local s = string.format("%02d", now.sec)
        clockLabel.Text = "â° VN: " .. h .. ":" .. m .. ":" .. s
        dateLabel.Text = "ðŸ“… " .. string.format("%02d/%02d/%04d", now.day, now.month, now.year)
        serverLabel.Text = "ðŸŽ® " .. getSea() .. " | Players: " .. tostring(#Players:GetPlayers())
    end
end)

-- Update FPS & Ping báº±ng RunService
local fps, lastUpdate = 0, tick()
RunService.RenderStepped:Connect(function()
    fps = fps + 1
    if tick() - lastUpdate >= 1 then
        local ping = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValueString()
        perfLabel.Text = "âš¡ FPS: " .. fps .. " | ðŸ“¡ Ping: " .. ping
        fps = 0
        lastUpdate = tick()
    end
end)

-- Báº­t/táº¯t HUD báº±ng F4
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.F4 then
        frame.Visible = not frame.Visible
    end
end)



