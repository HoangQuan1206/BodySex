--// UI của Hoàng Quân
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Stats = Instance.new("TextLabel")

ScreenGui.Parent = game:GetService("CoreGui")

-- Frame
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.Size = UDim2.new(0, 420, 0, 120)
Frame.Position = UDim2.new(0.5, -210, 0.1, 0)
Frame.BackgroundTransparency = 0.3
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true

-- Title
Title.Parent = Frame
Title.Text = "⚡ Config Banana - Made by Hoàng Quân ⚡"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(200, 180, 255)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBlack

-- Stats
Stats.Parent = Frame
Stats.Text = "FPS: 0 | Players: 0 | Ping: 0ms"
Stats.Size = UDim2.new(1, 0, 0, 50)
Stats.Position = UDim2.new(0, 0, 0, 60)
Stats.BackgroundTransparency = 1
Stats.TextColor3 = Color3.fromRGB(255, 255, 0)
Stats.Font = Enum.Font.GothamBold
Stats.TextScaled = true

-- Services
local RS = game:GetService("RunService")
local Players = game:GetService("Players")
local StatsService = game:GetService("Stats")

-- Update Stats
task.spawn(function()
    while task.wait(1) do
        local fps = math.floor(1 / RS.RenderStepped:Wait())
        local ping = math.floor(StatsService.Network.ServerStatsItem["Data Ping"]:GetValue())
        local playerCount = #Players:GetPlayers()

        -- Màu FPS
        local fpsColor = Color3.fromRGB(0,255,0) -- mặc định xanh
        if fps < 30 then
            fpsColor = Color3.fromRGB(255,0,0) -- đỏ lag nặng
        elseif fps < 50 then
            fpsColor = Color3.fromRGB(255,255,0) -- vàng hơi lag
        end

        Stats.TextColor3 = fpsColor
        Stats.Text = string.format("FPS: %d | Players: %d | Ping: %dms", fps, playerCount, ping)
    end
end)
